<h2>Edit task</h2>

<div class="taskDisplay">
     <form action="/edit/{{todo.id}}" method="post">
        <div class="form-group">
          <label for="taskname">Task name:</label>
          <input type="text" class="form-control" name="task" value="{{todo.task}}">
        </div>
        <div class="row">
          <div class="col form-group">
            <label for="date">Date:</label>
            <input type="date" class="form-control" name="date" value="{{todo.date}}">
          </div>
          <div class="col form-group">
            <label for="time">Time:</label>
            <input type="time" class="form-control" name="time" value="{{todo.time}}">
          </div>
        </div>  
        <div class="form-group">
          <label for="location">Location:</label>
          <input type="text" class="form-control" name="location" value="{{todo.location}}">
        </div>
        <div class="form-group">
          <label for="status">Status:</label>
          <select class="form-control" name="completed">
           {{#if completed}}
              <option value="false">In-progress</option>
              <option value="true" selected>Completed!</option>
           {{else}}
              <option value="false" selected>In-progress</option>
              <option value="true">Completed!</option>
           {{/if}}
           </select>         
        </div>
        <div class="form-group">
          <label for="description">Description:</label>
          <textarea class="form-control" name="description" rows="3">{{todo.description}}</textarea><br>
        </div>
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form> 
</div>

<div class="previousPage">
    <a href="/home">Back to Home</a>
</div>

