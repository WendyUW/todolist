<a href="logout">Log out</a>

<h2>Current to-do's:</h2>
<div class="tasklistDisplay">
    <ul>
       {{#each todos}}
        <li id="t{{id}}">
          <span class="name"><h4>{{task}}</h4></span>
          <a href="edit/{{id}}">(Edit)</a>
          <span class="description"> <b>When:</b> {{date}} @ {{time}}</span>
          {{#if completed}}
            <span class="completed"><b>Status:</b> Completed!</span>
            <button class="toggleBtn">Resume!</button>
          {{else}}
            <span class="completed"><b>Status:</b> In-progress</span>
            <button class="toggleBtn complete">Complete!</button>
          {{/if}}
          <button class="deleteBtn">Delete</button>
        </li>
       {{/each}}
    </ul>
</div>

<h3>Create new task:</h3>
<div class="createDisplay">
     <form action="/create" method="post">
      Task name:<br>
        <input type="text" name="task"><br><br>
      Date:<br>
        <input type="date" name="date"><br><br>
      Time:<br>
        <input type="time" name="time"><br><br>
      Location:<br>
        <input type="text" name="location"><br><br>
      Description:<br>
        <textarea name="description" rows="5" cols="70"></textarea><br>
      <input type="submit" value="Create!">
    </form> 
</div>


